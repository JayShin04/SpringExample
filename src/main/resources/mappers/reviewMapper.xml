<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jayslog.springexample.mybatis.repository.ReviewRepository">
    <select id="selectReview" resultType="com.jayslog.springexample.mybatis.entity.Review" parameterType="int">
        SELECT
            `id`
            , `store_id`
            , `menu`
            , `user_name`
            , `point`
            , `review`
            , `created_at`
            , `updated_at`
        FROM
            `new_review`
        WHERE
            `id` = #{id}
    </select>

</mapper>